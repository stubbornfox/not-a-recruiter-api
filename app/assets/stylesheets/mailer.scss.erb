:root {
--qrh-c-primary: #7330DF;
--qrh-c-secondary: #F1EAFC;
--qrh-c-tertiary: #F1EAFC;
}

body, html {
  font-family: 'Helvetica Neue', Helvetica, sans-serif, Arial;
}

.btn {
  outline: none;
  border: none;
  cursor: pointer;
}

.btn-primary {
  background: #7330DF;
  border-radius: 8px;
  font-style: normal;
  font-weight: 700;
  font-size: 16px;
  line-height: 160%;
  text-align: center;
  color: #FFFFFF;
  text-decoration: none;
  display: inline-block;
  font-family: 'Google Sans';
  padding: 10px 56px;
  border-style: none;
  margin-bottom: 24px;
}

.info {
  background-color: #F1EAFC;
  padding: 10px;
  border-radius: 8px;
  display: inline-block;
}
