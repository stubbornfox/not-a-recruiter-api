    padding: 16px;
  }

  .job-list__action {
    display: none;
  }

  .job-list__overview {
    flex-direction: column;
    align-items: flex-start;
  }

  .container {
    padding-left: 12px;
    padding-right: 12px
  }

  .job-list__company-logo {
    width: 56px;
    height: 56px;
  }

  .job-list__overview p.job-list__job_brief span {
    font-size: 18px;
  }

  .job-content {
    flex-direction: column;
  }

  .job-bottom {
    padding: 16px;
  }

  .job-bottom .job-list__overview {
    display: none;
  }

  .job-bottom .job-list__action {
    display: flex;
    flex-grow: 1;
  }

  .job-bottom .btn {
    flex-grow: 1;
    order: -1;
  }

  .job-bottom .job-list__action .line {
    display: none;
  }

  .job-content__info {
    min-width: unset;
  }

  .job-content__info h4 {
    font-size: 24px;
  }

  .job-listing__job-link {
    flex-direction: column;
    align-items: flex-start;
    gap: 24px;
    padding: 1rem;
  }
  .jobs-filter {
    padding: 40px 16px;
  }
  .jobs-filter__form {
    flex-direction: column;
    height: unset;
  }

  .jobs-filter__form button {
    width: 100%;
    border-radius: 0;
  }

  .jobs-filter h2 {
    font-size: 42px;
    margin-bottom: 24px;
  }

  .custom-select {
    width: 100%;
  }

}



