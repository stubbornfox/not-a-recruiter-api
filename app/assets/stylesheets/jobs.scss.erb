.organization__website {
  font-size: 14px;
  color: var(--color-text);
  text-decoration: none;
}

.organization__website:hover {
  color: var(--color-heading);
  text-decoration: underline;
}

.header-container {
  margin: 0 auto;
  padding: 1rem;
  min-height: 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: var(--max-width-container);
}

.banner__image {
  width: 100%;
}

.border-bottom {
  border-bottom: 1px solid var(--color-border);
}

.organization__info {
  display: flex;
  align-items: center;
}

.organization__name {
  font-size: 20px;
  margin: 0;
}

.organization__logo {
  width: 3rem;
  height: 3rem;
  border-radius: 5px;
  overflow: hidden;
  margin-right: 0.5rem;
}

.organization__logo img {
  width: 100%;
  height: 100%;
}

.job-board {
  height: 100%;
  padding: 0 0 128px;
  overflow-x: hidden;
}

.banner {
  margin: 0 auto;
  padding: 24px 0 0;
}

.embed-responsive {
  position: relative;
  display: block;
  width: 100%;
  padding: 0;
  overflow: hidden;
}

.embed-responsive-16by9::before {
  padding-top: 56.25%;
}

.embed-responsive::before {
  display: block;
  content: "";
}

.embed-responsive-item {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 0;
}

.banner__text {
  text-align: center;
  margin: 32px auto 72px;
  max-width: 864px;
}

.banner__text h2 {
  line-height: 1.3;
  font-size: 40px;
  font-weight: 600;
  margin: 48px 0 20px;
}

.banner__text p {
  font-size: 14px;
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
}

.job-listing__jobs,
.job-listing__job-item {
  list-style: none;
}

.job-listing__jobs {
  padding: 0;
}

.job-listing__job-item {
  display: block;
  border: 1px solid #D1D1D1;
  margin-bottom: 1rem;
}

.job-listing__job-link {
  display: block;
  padding: 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: var(--color-text);
  text-decoration: none;
}

.job-listing__job-link:hover {
  border-color: var(--color-border-hover);
}

.job-listing__viewjob {
  border-radius: 0.25rem;
  padding: 0.325rem;
  display: inline-block;
  background-color: var(--color-background-soft);
}

.job-listing__job-link:hover .job-listing__viewjob {
  background-color: var(--vt-c-black);
  color: var(--vt-c-white);
}

.jobs-filter__form {
  display: flex;
  justify-content: space-between;
  margin-bottom: 3rem;
}

.jobs-filter__field-group {
  display: flex;
  flex-direction: column;
  flex-grow: 0.3;
}

.jobs-filter__field-group label {
  font-weight: 600;
  color: var(--color-heading);
  margin-bottom: 0.5rem;
}

.jobs-filter__field-group select {
  height: 2.5rem;
  border-color: var(--color-border-hover);
  border-radius: 0.25rem;
  padding-left: 0.25rem;
  padding-right: 0.25rem;
}

.job-listing__job-title {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 600;
  font-size: 20px;
  line-height: 120%;
  /* identical to box height, or 24px */


  /* Neutrals/100 */

  color: #171717;
  margin: 0;
}

.job-listing__job-location {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 400;
  font-size: 16px;
  line-height: 160%;
  /* identical to box height, or 26px */


  /* Neutrals/80 */

  color: #454545;
}

.job-listing__job-info {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  padding: 0px;
  gap: 8px;
}

.job-listing__job-type {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 6px 10px;
  gap: 8px;
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 600;
  font-size: 14px;
  line-height: 160%;
  /* or 22px */


  /* Brands/Primary */

  color: #7330DF;


  /* Brands/Tertiary */

  background: #F1EAFC;
  border-radius: 80px;
}

.job-listing__job-category,
.job-listing__job-salary {
  box-sizing: border-box;

  /* Auto layout */

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 6px 10px;
  gap: 8px;

  /* Brands/Primary */

  border: 1px solid #7330DF;
  border-radius: 80px;
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 600;
  font-size: 14px;
  line-height: 160%;
  /* or 22px */


  /* Brands/Primary */

  color: #7330DF;
}

.job-listing_job-main-content {
  display: flex;
  gap: 8px;
  flex-direction: column;
}

.job-listing_job-additional-content {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 160%;
  display: flex;
  align-items: center;
  text-align: center;
  color: #000000;
  gap: 4px;
}


/*show*/
.breadcrumb {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 400;
  font-size: 16px;
  line-height: 160%;
  color: rgba(32, 36, 48, 0.5);
  padding-top: 40px;
}

.job-list {
  margin-top: 40px;
  margin-bottom: 80px;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 24px;
  max-width: var(--max-width-container);
  width: 100%;
  background: #FFFFFF;
  border: 1px solid #D1D1D1;
}

.job-list__company-logo {
  width: 88px;
  height: 88px;
}

.job-list__company-logo img {
  width: 100%;
  height: 100%;
}

.job-list__overview {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0px;
  gap: 24px;
}

.job-list__overview .job-list__job-title h3 {
  font-family: 'Clash Display Variable';
  font-style: normal;
  font-weight: 600;
  font-size: 32px;
  line-height: 120%;
  color: #171717;
  margin: 0;
}

.job-list__overview p.job-list__job_brief {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0px;
  gap: 8px;
  margin: 0;
}

.job-list__overview p.job-list__job_brief span {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 400;
  font-size: 20px;
  line-height: 160%;
  color: #454545;
  margin: 0;
}

.job-list__action {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0px;
  gap: 30px;
}

.job-content {
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  padding: 72px 0px;
  gap: 64px;
}

.job-content__info {
  max-width: 376px;
  width: 100%;
}

.job-content__info h4 {
  font-family: 'Clash Display Variable';
  font-weight: 600;
  font-size: 32px;
  line-height: 120%;
}

.job-content__description {
  flex-grow: 1;
  font-family: Epilogue;
  line-height: 160%;
}

.job-content__info__line {
  display: flex;
  justify-content: space-between;
  font-family: Epilogue;
  margin-top: 30px;
}

.job-bottom {
  display: flex;
  justify-content: space-between;
  max-width: var(--max-width-container);
  margin: 0 auto;
  align-items: center;
  padding: 20px 0px;
  gap: 30px;
}

@media screen and (max-width: 650px) {
  .job-list {
    padding: 16px;
  }

  .job-list__action {
    display: none;
  }

  .job-list__overview {
    flex-direction: column;
    align-items: flex-start;
  }

  .container {
    padding-left: 12px;
    padding-right: 12px
  }

  .job-list__company-logo {
    width: 56px;
    height: 56px;
  }

  .job-list__overview p.job-list__job_brief span {
    font-size: 18px;
  }

  .job-content {
    flex-direction: column;
  }

  .job-bottom {
    padding: 16px;
  }

  .job-bottom .job-list__overview {
    display: none;
  }

  .job-bottom .job-list__action {
    display: flex;
    flex-grow: 1;
  }

  .job-bottom .btn {
    flex-grow: 1;
    order: -1;
  }

  .job-bottom .job-list__action .line {
    display: none;
  }

  .job-content__info {
    max-width: unset;
  }

  .job-content__info h4 {
    font-size: 24px;
  }

  .job-listing__job-link {
    flex-direction: column;
    align-items: flex-start;
    gap: 24px;
    padding: 1rem;
  }
}

.backdrop {
  background: #0D0B41;
  opacity: 0.7;
  position: fixed;
  z-index: 0;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: none;
}

.modal {
  display: none;
  position: fixed;
  z-index: 1;
  left: 0;
  top: 90px;
  width: 100%;
  height: 100%;
  overflow: auto;
}

.modal-content {
  max-width: 644px;
  background-color: white;
  margin: 0 auto;
  padding: 48px 32px;
  box-sizing: border-box;
  margin-bottom: 159px;
}

.header-modal {
    justify-content: flex-end;
    display: flex;
    align-items: center;
    margin-top: -24px;
    margin-right: -8px;

  .close {
    background: transparent;
    border: 0;

    display: flex;
    align-items: center;
  }

  .close:hover,
  .close:focus {
    text-decoration: none;
    cursor: pointer;
  }

}



#applyModal {
  h4 {
    font-style: normal;
    font-weight: 600;
    font-size: 24px;
    line-height: 120%;
    /* identical to box height, or 29px */
    font-feature-settings: 'cv11' on;
    /* Neutrals/100 */
    color: #171717;
    margin-bottom: 16px;
  }

  p.sub-header {
    font-family: 'Epilogue';
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 160%;
    /* identical to box height, or 26px */


    /* Neutrals/60 */

    color: #747474;
    margin-bottom: 32px;
  }

  .job-info-wrapper {
    display: flex;
    align-items: flex-start;

    .job-list__company-logo {
      width: 80px;
      height: 80px;
    }

    .job-list__job-title h3 {
      font-style: normal;
      font-weight: 600;
      font-size: 24px;
      line-height: 120%;
    }

    .job-list__job_brief {
      gap: 16px;
      margin-top: 8px;

      span {
        font-family: 'Epilogue';
        font-style: normal;
        font-weight: 400;
        font-size: 18px;
        line-height: 160%;
        /* identical to box height, or 29px */


        /* Neutrals/80 */

        color: #454545;
      }
    }
  }

  .form-wrapper {
    width: 100%;
  }

  label {
    font-family: 'Epilogue';
    font-style: normal;
    font-weight: 600;
    font-size: 16px;
    line-height: 160%;
    /* identical to box height, or 26px */


    /* Neutrals/80 */

    color: #454545;
    margin-bottom: 4px;
    display: block;
  }


  label.required::after {
    content: ' (required)';
    font-weight: 300;
    font-size: 14px;
  }

  input[type=text], input[type=email], textarea {
    box-sizing: border-box;

    /* Auto layout */

    display: flex;
    flex-direction: row;
    align-items: center;
    padding: 12px 16px;
    gap: 10px;
    width: 100%;
    height: 50px;

    /* Neutrals / 0 */

    background: #FFFFFF;
    /* Neutrals/20

    F6F6F7
    */
    border: 1px solid #D1D1D1;

    font-family: 'Epilogue';
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 160%;
    /* identical to box height, or 26px */


    /* Neutrals/40 */

    color: #A2A2A2;
    margin-bottom: 32px;
  }

  textarea {
    height: auto;
  }

  .btn.btn-submit {
    margin-top: 32px;
    display: block;
    width: 100%;
    margin-bottom: 32px;
  }

  .divider {
    width: 100%;
    height: 0px;
    margin-top:32px;
    margin-bottom:32px;

    /* Neutrals/20

    F6F6F7
    */
    border-top: 1px solid #D1D1D1;
  }

  p.terms {
    font-family: 'Epilogue';
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 160%;
    /* or 26px */


    /* Neutrals/80 */

    color: #454545;

    a {
      text-decoration: none;
    }

  }

  .resume-wrapper {
    display: flex;
    align-items: center;
    margin-bottom: 32px;
    justify-content: space-between;

    label {
      margin-bottom: 0;
    }

    input[type=file] {
      opacity: 0;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      z-index: 1;
      cursor: pointer;
    }
  }

  .resume {
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 16px;
    gap: 16px;

    width: 220px;
    background: #F8F8FD;
    /* Brands/Primary */

    border: 1px dashed #7330DF;
    border-radius: 4px;
    font-family: 'Epilogue';
    font-style: normal;
    font-weight: 500;
    font-size: 16px;
    line-height: 160%;
    /* identical to box height, or 26px */


    /* Neutrals/80 */

    color: #454545;

  }

  ::-webkit-file-upload-button {
     display: none;
  }
}
