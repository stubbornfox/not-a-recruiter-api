:root {
  --vt-c-white: #ffffff;
  --vt-c-white-soft: #f8f8f8;
  --vt-c-white-mute: #f2f2f2;
  --vt-c-white-smoke: #525252;

  --vt-c-black: #181818;
  --vt-c-black-soft: #222222;
  --vt-c-black-mute: #282828;
  --vt-c-black-smoke: #525252;

  --vt-c-indigo: #2c3e50;

  --vt-c-divider-light-1: rgba(60, 60, 60, 0.29);
  --vt-c-divider-light-2: rgba(60, 60, 60, 0.12);
  --vt-c-divider-dark-1: rgba(84, 84, 84, 0.65);
  --vt-c-divider-dark-2: rgba(84, 84, 84, 0.48);

  --vt-c-text-light-1: var(--vt-c-indigo);
  --vt-c-text-light-2: rgba(60, 60, 60, 0.66);
  --vt-c-text-dark-1: var(--vt-c-white);
  --vt-c-text-dark-2: rgba(235, 235, 235, 0.64);
  --fk-max-width-input: 25rem;
  --max-width-container: 80rem;
  --qrh-c-tertiary: #F1EAFC;
}

:root {
  --color-background: var(--vt-c-white);
  --color-background-soft: var(--vt-c-white-soft);
  --color-background-mute: var(--vt-c-white-mute);
  --color-background-smoke: var(--vt-c-white-smoke);

  --color-border: var(--vt-c-divider-light-2);
  --color-border-hover: var(--vt-c-divider-light-1);

  --color-heading: var(--vt-c-text-light-1);
  --color-text: var(--vt-c-text-light-1);

  --section-gap: 160px;
}

@font-face {
  font-family: "Clash Display Variable";
  src: url(<%= asset_path 'ClashDisplay-Regular.otf' %>) format("opentype");
}

@font-face {
  font-family: "Clash Display Variable";
  font-weight: bold;
  src: url(<%= asset_path 'ClashDisplay-Bold.otf' %>) format("opentype");
}

@font-face {
  font-family: "Clash Display Variable";
  font-weight: 600;
  src: url(<%= asset_path 'ClashDisplay-Semibold.otf' %>) format("opentype");
}

@media (max-width: 650px) {
  .banner__text h2 {
    margin: 30px 0 16px;
    font-size: 32px;
  }

  .banner {
    padding: 24px 0 0;
  }

  .banner__text {
    margin: 16px auto 64px;
    padding: 0 16px;
  }
}


html,
body {
  font-family: 'Clash Display Variable', 'Inter', sans-serif;
  margin: 0;
  color: var(--color-text);
  font-size: 14px;
}

.ellipse {
  width: 4px;
  height: 4px;
  background: #454545;
  border-radius: 50%;
}


.color-black {
  color: #202430;
}

.btn {
  outline: none;
  border: none;
  cursor: pointer;
}

.btn-primary {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 14px 56px;
  gap: 10px;
  background: #7330DF;
  border-radius: 8px;
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 700;
  font-size: 18px;
  line-height: 160%;
  text-align: center;
  color: #FFFFFF;
}

.shadow {
  box-shadow: 0px 4px 36px 4px rgba(0, 0, 0, 0.05);
}

.container {
  flex: 1 0 auto;
  display: flex;
  flex-direction: column;
  max-width: var(--max-width-container);
  margin: 0 auto;
}

.line {
  border-left: 1px solid #D1D1D1;
  height: auto;
  width: 0px;
}

.semibold {
  font-weight: 600;
}

.organization__website {
  font-size: 14px;
  color: var(--color-text);
  text-decoration: none;
}

.organization__website:hover {
  color: var(--color-heading);
  text-decoration: underline;
}

.header-container {
  margin: 0 auto;
  padding: 1rem;
  min-height: 40px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  max-width: var(--max-width-container);
}

.banner__image {
  width: 100%;
}

.border-bottom {
  border-bottom: 1px solid var(--color-border);
}

.organization__info {
  display: flex;
  align-items: center;
}

.organization__name {
  font-size: 20px;
  margin: 0;
}

.organization__logo {
  width: 3rem;
  height: 3rem;
  border-radius: 5px;
  overflow: hidden;
  margin-right: 0.5rem;
}

.organization__logo img {
  width: 100%;
  height: 100%;
}

.job-board {
  height: 100%;
  padding: 0 0 128px;
  overflow-x: hidden;
}

.banner {
  margin: 0 auto;
  padding: 24px 0 0;
}

.embed-responsive {
  position: relative;
  display: block;
  width: 100%;
  padding: 0;
  overflow: hidden;
}

.embed-responsive-16by9::before {
  padding-top: 56.25%;
}

.embed-responsive::before {
  display: block;
  content: "";
}

.embed-responsive-item {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border: 0;
}

.banner__text {
  text-align: center;
  margin: 32px auto 72px;
  max-width: 864px;
}

.banner__text h2 {
  line-height: 1.3;
  font-size: 40px;
  font-weight: 600;
  margin: 48px 0 20px;
}

.banner__text p {
  font-size: 14px;
  line-height: 1.6;
  max-width: 600px;
  margin: 0 auto;
}

.job-listing__jobs,
.job-listing__job-item {
  list-style: none;
}

.job-listing__jobs {
  padding: 0;
}

.job-listing__job-item {
  display: block;
  border: 1px solid #D1D1D1;
  margin-bottom: 1rem;
}

.job-listing__job-link {
  display: block;
  padding: 1.5rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: var(--color-text);
  text-decoration: none;
}

.job-listing__job-link:hover {
  border-color: var(--color-border-hover);
}

.job-listing__viewjob {
  border-radius: 0.25rem;
  padding: 0.325rem;
  display: inline-block;
  background-color: var(--color-background-soft);
}

.job-listing__job-link:hover .job-listing__viewjob {
  background-color: var(--vt-c-black);
  color: var(--vt-c-white);
}

.jobs-filter__form {
  display: flex;
  justify-content: space-between;
  margin-bottom: 3rem;
}

.jobs-filter__field-group {
  display: flex;
  flex-direction: column;
  flex-grow: 0.3;
}

.jobs-filter__field-group label {
  font-weight: 600;
  color: var(--color-heading);
  margin-bottom: 0.5rem;
}

.jobs-filter__field-group select {
  height: 2.5rem;
  border-color: var(--color-border-hover);
  border-radius: 0.25rem;
  padding-left: 0.25rem;
  padding-right: 0.25rem;
}

.job-listing__job-title {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 600;
  font-size: 20px;
  line-height: 120%;
  /* identical to box height, or 24px */


  /* Neutrals/100 */

  color: #171717;
  margin: 0;
}

.job-listing__job-location {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 400;
  font-size: 16px;
  line-height: 160%;
  /* identical to box height, or 26px */


  /* Neutrals/80 */

  color: #454545;
}

.job-listing__job-info {
  display: flex;
  flex-direction: row;
  align-items: stretch;
  padding: 0px;
  gap: 8px;
}

.job-listing__job-type {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 6px 10px;
  gap: 8px;
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 600;
  font-size: 14px;
  line-height: 160%;
  /* or 22px */


  /* Brands/Primary */

  color: #7330DF;


  /* Brands/Tertiary */

  background: #F1EAFC;
  border-radius: 80px;
}

.job-listing__job-category,
.job-listing__job-salary {
  box-sizing: border-box;

  /* Auto layout */

  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 6px 10px;
  gap: 8px;

  /* Brands/Primary */

  border: 1px solid #7330DF;
  border-radius: 80px;
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 600;
  font-size: 14px;
  line-height: 160%;
  /* or 22px */


  /* Brands/Primary */

  color: #7330DF;
}

.job-listing_job-main-content {
  display: flex;
  gap: 8px;
  flex-direction: column;
}

.job-listing_job-additional-content {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 160%;
  display: flex;
  align-items: center;
  text-align: center;
  color: #000000;
  gap: 4px;
}


/*show*/
.breadcrumb {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 400;
  font-size: 16px;
  line-height: 160%;
  color: rgba(32, 36, 48, 0.5);
  padding-top: 40px;
}

.job-list {
  margin-top: 40px;
  margin-bottom: 80px;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 24px;
  gap: 181px;
  max-width: var(--max-width-container);
  width: 100%;
  background: #FFFFFF;
  border: 1px solid #D1D1D1;
}

.job-list__company-logo {
  width: 88px;
  height: 88px;
}

.job-list__company-logo img {
  width: 100%;
  height: 100%;
}

.job-list__overview {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0px;
  gap: 24px;
}

.job-list__overview .job-list__job-title h3 {
  font-family: 'Clash Display Variable';
  font-style: normal;
  font-weight: 600;
  font-size: 32px;
  line-height: 120%;
  color: #171717;
  margin: 0;
}


.job-list__overview p.job-list__job_brief {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0px;
  gap: 8px;
}

.job-list__overview p.job-list__job_brief span {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 400;
  font-size: 20px;
  line-height: 160%;
  color: #454545;
  margin: 0;
}

.job-list__action {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 0px;
  gap: 30px;
}

.job-content {
  flex-direction: row;
  justify-content: center;
  align-items: flex-start;
  padding: 72px 124px;
  gap: 64px;
}

.job-content__info {
  max-width: 376px;
  width: 100%;
}

.job-content__info h4 {
  font-family: 'Clash Display Variable';
}

.job-content__description {
  flex-grow: 1;
  font-family: Epilogue;
}

.job-content__info__line {
  display: flex;
  justify-content: space-between;
  font-family: Epilogue;
  margin-top: 30px;
}

.job-bottom {
  display: flex;
  justify-content: space-between;
  max-width: var(--max-width-container);
  margin: 0 auto;
  align-items: center;
  padding: 20px 0px;
  gap: 30px;
}

.fix-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
}

.footer {
  background: #FFFFFF;
  border-top: 1px solid #D1D1D1;
  padding: 48px 0;
  text-align: center;
}

.footer p {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 400;
  font-size: 14px;
  line-height: 160%;
  color: #747474;
}

.mb-20 {
  margin-bottom: 5rem;
}

.mx-auto {
  margin-left: auto;
  margin-right: auto;
}

.my-8 {
  margin-top: 2rem;
  margin-bottom: 2rem;
}

.btn-secondary {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding: 12px 16px;
  gap: 10px;
  border: 1px solid #C7ACF2;
  border-radius: 8px;
  background: white;
}


.hire-with-qr-text {
  font-family: 'Epilogue';
  font-style: normal;
  font-weight: 700;
  font-size: 16px;
  line-height: 160%;
  display: flex;
  align-items: center;
  text-align: center;

  /* Brands/Primary */

  color: #7330DF;
}
